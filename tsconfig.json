{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "sourceMap": false,
        "allowJs": true,
        "outDir": "./lib/",
        "incremental": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*"],
    "exclude": ["**/*.spec.ts"]
}