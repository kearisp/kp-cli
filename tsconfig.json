{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "sourceMap": false,
        "allowJs": true,
        "outDir": "./dist/",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "types": ["node"]
    },
    "include": ["./src/**/*"],
    "exclude": ["**/*.spec.ts"]
}